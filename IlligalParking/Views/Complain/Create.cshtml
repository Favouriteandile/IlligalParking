@model Complain
@{
    ViewData["Title"] = "File Complain";
}
<section class="section" id="contact">
    <div class="container">
        <div class="row justify-content-lg-start mb-4">
            <div class="col-md-8 col-lg-8 text-left">

                <!-- Heading -->
                <h2 class="lg-title mb-2">
                    File Complain
                </h2>

                <!-- Subheading -->
                <p class="mb-5">
                    Fill in all Fields, The On Duty Security will attend to it!.
                </p>

            </div>
        </div>
        <!-- / .row -->


        <div class="row justify-content-lg-start">
            <div class="col-lg-8">
                <div asp-validation-summary=" All" class="text-secondary"></div>
                <form enctype="multipart/form-data" asp-action="Create" method="post">

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input type="text" asp-for="ReporterName" class="form-control" placeholder="Enter your Name">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <input type="text" asp-for="CarRegistration" class="form-control" placeholder="Enter Car Registration">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <select asp-for="Name" class="form-control">
                                    <option value="">Select Parking Type</option>
                                    <option value="Visitors Parking">Visitors Parking</option>
                                    <option value="Staff Parking">Staff Parking</option>
                                    <option value="Student Residence Parking">Student Residence Parking</option>
                                    <option value="Reserved Parking">Reserved Parking</option>

                                </select>

                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <select asp-for="Violation" class="form-control">
                                    <option value="">Select Parking Violation</option>
                                    <option value="Parked Overnight">Parked Overnight</option>
                                    <option value="Car seemingly not working">Car seemingly not working</option>
                                    <option value="Parked in a wrong space">Parked in a wrong space</option>

                                </select>

                            </div>
                        </div>
                        
                        <div class="col-lg-12">
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Report</button>

                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>