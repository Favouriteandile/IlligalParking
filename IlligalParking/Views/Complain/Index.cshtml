@model IEnumerable<Complain>
@{
    ViewData["Title"] = "Complains";

}
<div class="card">
    <div class="card-header">
        <h5 class="card-title">Complain</h5>
        <h6 class="card-subtitle text-muted">Here are lodged Complains, Please agently attended to</h6>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Parking Type</th>
                    <th>Car Registration</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.CarRegistration</td>

                        <td>
                            <a asp-action="Details" asp-controller="Complain" asp-route-ComplainID="@item.ComplainID">Details</a> |
                            <a asp-action="Delete" asp-controller="Complain" asp-route-ComplainID="@item.ComplainID">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p>No Complains Available</p>
    }
</div>
<a asp-controller="Complain" asp-action="Index">Home</a> | <a asp-controller="Security" asp-action="Create">Create Driver</a>