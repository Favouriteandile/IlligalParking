@model Vehicle

@{
    ViewData["Title"] = "Add Vehicle";
}

<h2> Add Vehicle</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="UserID" />
    <div class="form-group">
        <label asp-for="DriverName"></label>
        <div><span asp-validation-for="DriverName" class="text-danger"></span></div>
        <input asp-for="DriverName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IDNumber"></label>
        <div><span asp-validation-for="IDNumber" class="text-danger"></span></div>
        <input asp-for="IDNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CellNumber"></label>
        <div><span asp-validation-for="CellNumber" class="text-danger"></span></div>
        <input asp-for="CellNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Registration"></label>
        <div><span asp-validation-for="Registration" class="text-danger"></span></div>
        <input asp-for="Registration" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ParkingAssigned"></label>
        <div><span asp-validation-for="ParkingAssigned" class="text-danger"></span></div>
        <select asp-for="ParkingAssigned" class="form-control">
            <option value="">--- Select Packing ---</option>
            <option value="Visitors Packing"> Visitors Packing </option>
            <option value="Resident Packing"> Resident Packing </option>
            <option value="Staff Packing"> Staff Packing </option>
            <option value="Reserved Packing"> Reserved Packing </option>
        </select>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
